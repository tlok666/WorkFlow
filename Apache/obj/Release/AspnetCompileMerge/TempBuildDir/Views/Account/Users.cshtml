        var havevalue;
        $(function () {
            //点击按钮移到右边
            $('#selto').click(function () {

                $("#lselect option:selected").each(function () {
                    havevalue = 0;
                    val = $(this).val();
                    $("#rselect option").each(function () {
                        if ($(this).val() == val) {
                            havevalue = 1;
                            return;
                        }
                    });
                    if (havevalue == 0) {

                        $(this).clone().appendTo('#rselect'); //追加给对方
